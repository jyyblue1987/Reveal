<?xml version="1.0" encoding="utf-8"?>
<!-- <common.library.utils.SoftKeyboardHandledLayout xmlns:android="http://schemas.android.com/apk/res/android" -->
<com.dating.reveal.utility.SoftKeyboardHandledLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
	android:background="#ffffff"
    >

    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    >
	    <RelativeLayout 
	        android:id="@+id/videoWnd"
	        android:layout_width="match_parent"
	        android:layout_height="600dp"
	        android:background="#ffffff"
	        >

	        <SurfaceView
	  		    android:id="@+id/surfaceview"
	  		    android:layout_width="match_parent"
	  		    android:layout_height="match_parent"
	  		     /> 
	  		     
	  		<Button
		        android:id="@+id/btn_camera_switch"
		        android:layout_width="40dip"
		        android:layout_height="40dip"
	            android:layout_alignParentRight="true"
		        android:layout_marginRight="20dip"
		        android:layout_marginTop="10dp"
		        android:background="@drawable/camera_switch_icon" 
		        />       
	        
	  		<ImageView
	  		    android:id="@+id/imgGoBack"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="20dp"
	            android:layout_marginTop="18dp"
	            android:background="@drawable/goback_icon"
	            />
	  		
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="120dp"
	            android:layout_marginTop="18dp"
	            android:gravity="center"
	            >
		        <ImageView
		            android:id="@+id/imageEndlive"
		            android:layout_width="100dip"
		            android:layout_height="30dip"
		            android:scaleType="fitXY"
		            android:src="@drawable/red_button" />
	
		        <TextView
		            android:id="@+id/textEndLive"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_centerVertical="true"
		            android:textColor="#ffffff"
		            android:textSize="16dp"
		            android:text="START LIVE" />
	      
	        </RelativeLayout>
	 	    
	   </RelativeLayout>

	</LinearLayout>
	
	<include
    	android:id="@+id/fragment_chat"
    	layout="@layout/soc_chat_fragment_chat2"/>

</com.dating.reveal.utility.SoftKeyboardHandledLayout>