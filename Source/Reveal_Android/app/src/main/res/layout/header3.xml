<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/lay_fragment"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:background="@color/white_darker"
    >
<RelativeLayout
    android:id="@+id/lay_headerbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    >
    <RelativeLayout
        android:id="@+id/lay_left"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:background="@color/white_darker"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:id="@+id/img_left_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_centerInParent="true"
            android:background="@drawable/three"
            />
        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:src ="@drawable/icon_back"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/txt_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "REVEAL"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/lay_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:visibility="visible"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/img_right_bell"
            android:src ="@drawable/bell"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true" />
        <Button
            android:id="@+id/btn_notification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textColor="#ffffff"
            android:background="@drawable/circle_noti"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="1"
            android:visibility="invisible"
            />


    </RelativeLayout>

</RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/dark_gray"
    android:layout_below="@+id/lay_headerbar"/>
</RelativeLayout>