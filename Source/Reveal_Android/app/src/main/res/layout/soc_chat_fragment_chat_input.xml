<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
    android:background="#cccaca"
    >
    
	<LinearLayout
	    android:id="@+id/viewChatbg"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
	    android:background="#cccaca"
	    android:gravity="center_vertical"
	    android:paddingTop="2dp"
	    android:paddingBottom="2dp"
	    android:layout_marginTop="1dp"
	    android:layout_marginBottom="1dp"
	    >
		<RelativeLayout
			android:layout_width="wrap_content"
			android:background="#cccaca"
			android:layout_height="wrap_content">
        <ImageView
	        android:id="@+id/img_message_text"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:padding="0dp"
			android:layout_marginRight="0dp"
	        android:layout_marginLeft="0dp"
	        android:src="@drawable/record"
	        />
			<ImageView
				android:id="@+id/img_message_voice"
				android:layout_width="0dp"
				android:layout_height="0dp"
				android:padding="0dp"
				android:visibility="invisible"
				android:layout_marginRight="0dp"
				android:layout_marginLeft="0dp"
				android:src="@drawable/chat_icon"
				/>
		</RelativeLayout>
		<!--github.ankushsachdeva.emojicon.EmojiconEditText-->
		 <RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			>
			 <EditText
				 android:id="@+id/img_edit_text"
				 android:layout_width="match_parent"
				 android:layout_height="30dp"
				 android:background="@drawable/male_white"
				 android:padding="2dp"
				 android:layout_marginLeft="15dp"
				 android:paddingLeft="35dp"
				 android:paddingRight="5dp"
				 android:inputType="textCapSentences|textNoSuggestions"/>

			<Button
				android:id="@+id/btn_edit_voice"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:text="Start Recording"
				android:background="@drawable/chat_edit_bg"
				android:padding="2dp"
				 android:paddingLeft="5dp"
				android:paddingRight="5dp"
				android:visibility="invisible"
				/>

			<!--emojicon:emojiconSize="22sp"-->
		</RelativeLayout>

		<Button
		    android:id="@+id/btnSend"
		    android:layout_width="60dp"
		    android:layout_height="30dp"
		    android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
		    android:background="@drawable/red_button"
		    android:textColor="#ffffff"
		    android:textSize="18dp"
			android:textAllCaps="false"
		    android:text="Send" />
	    
	</LinearLayout>
	
</LinearLayout>
