<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white_darker"
    >
    <RelativeLayout
        android:id="@+id/lay_headerbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:id="@+id/lay_left"
            android:layout_width="100dp"
            android:layout_height="45dip"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@color/white_darker"
            android:layout_marginLeft="0dp"
            >
            <ImageView
                android:id="@+id/img_back_arrow"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:src ="@drawable/back"/>
            <TextView
                android:id="@+id/txt_photo"
                android:layout_toRightOf="@+id/img_back_arrow"
                android:layout_marginLeft="3dp"
                android:text="Photos"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:id="@+id/txt_folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Camera"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:id="@+id/lay_right"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/txt_cancel"
                android:text = "Cancel"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"
        android:layout_below="@+id/lay_headerbar"/>
</RelativeLayout>